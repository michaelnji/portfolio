	/* HTML: <div class="loader"></div> */
	.loader {
		aspect-ratio: 1;
		--c: no-repeat linear-gradient(#715df2 0 0);
		background: var(--c) 0 0, var(--c) 0 100%, var(--c) 50% 50%, var(--c) 100% 0, var(--c) 100% 100%;
		animation: l13 2s infinite alternate ease-in;
	}

	@keyframes l13 {
		0%,
		10% {
			background-size: 20% 100%;
		}
		50% {
			background-size: 20% 20%;
		}
		90%,
		100% {
			background-size: 100% 20%;
		}
	}

	@keyframes fade-in {
		from {
			opacity: 0;
		}
	}

	@keyframes fade-out-fake {
		to {
			opacity: 1;
		}
	}

	@keyframes slide-from-right {
		from {
			transform: translateX(30px);
		}
	}

	@keyframes slide-to-left {
		to {
			transform: translateX(-30px);
		}
	}

	:root::view-transition-old(root) {
		animation: 80ms cubic-bezier(0.4, 0, 1, 1) both fade-out-fake,
			300ms cubic-bezier(0.4, 0, 0.2, 1) both slide-to-left;
	}

	:root::view-transition-new(root) {
		animation: 120ms cubic-bezier(0, 0, 0.2, 1) 90ms both fade-in,
			300ms cubic-bezier(0.4, 0, 0.2, 1) both slide-from-right;
		}

