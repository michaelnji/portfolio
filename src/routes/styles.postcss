@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
	--secondary: #4c6ef5;
	--primary: #ffffff;
}
/* html {
	scroll-behavior: smooth;
} */

.dark {
	--primary: #495057;
}

.btn {
	@apply flex items-center gap-x-2 p-3 transition duration-300 rounded-xl text-base font-bold capitalize bg-base-200  text-gray-50;
}
.btn:hover {
	@apply !bg-base-300;
}
.btn:active {
	@apply scale-95;
}
.btn-lg {
	@apply text-xl;
}
.divider {
	@apply w-full border border-gray-200;
}
.dark .divider{
	@apply border-gray-700
}
.btn-ghost {
	@apply bg-transparent text-base-400 transition shadow-none;
}
.btn-ghost:hover {
	@apply bg-base-300  bg-opacity-5;
}
.btn-primary {
	@apply  bg-gradient-to-br from-purple-600 via-indigo-500 to-blue-500 text-gray-50 border-2;
}

